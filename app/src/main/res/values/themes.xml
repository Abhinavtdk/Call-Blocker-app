<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PratilipiAssignment" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/dark_grey</item>
        <item name="colorAccent">@color/sunburst</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="bottomSheetDialogTheme">@style/DialogTheme</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="BackgroundDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_dialog</item>
    </style>
    
    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/BackgroundDialog</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimary">@color/cloud</item>
        <item name="colorOnPrimary">@color/dark_cloud</item>
        <item name="colorOnSurface">@color/dark_cloud</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>